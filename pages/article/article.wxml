<!--pages/article/article.wxml-->
<view class="book-bg">
  <view style='weight:100%;text-align: center;margin-top:20rpx'>
    <image class="image_frame" src="{{zx_info.img}}" mode="aspectFill"></image>
  </view>

  <view style='display: flex;flex-direction: row; margin-bottom:20rpx'>
    <view style='display: flex;flex-direction: row; margin-bottom:20rpx'>
      <view class='' style='padding-left: 30rpx;float: left;width: 700rpx;position: relative;'>

        <view class='flex-row' style='width:100%;'>
          <view class='office-title-font' style='font-weight:bold;width:400rpx;'>
            {{zx_info.title}}
          </view>
          <view class='office-font-price' style='margin-left:30rpx ;float: right;position: relative;width:240rpx;text-align:right;'>{{zx_info.author}}</view>
        </view>

        <view style='height:10rpx;'></view>
        <view style='color:#AAA;width:690rpx;'>
          {{zx_info.intro}}
        </view>
      </view>
    </view>
  </view>

  <view style='width: 100%;height: 20rpx; background: #f5f5f5;'></view>

  <block wx:for="{{tw_steps}}">
    <view style='weight:100%;text-align: center; margin-top:30rpx'>
      <image class="image_frame" src="{{item.img}}" mode="aspectFill"></image>
    </view>
    <view style='padding:30rpx;color:#AAA'>
      {{item.text}}
    </view>
    <view style='width: 100%;height: 20rpx; background: #f5f5f5;'></view>
  </block>

  <view style="display:{{show ? 'flex' : 'none'}};flex-direction: column;align-items:center;">
    <view style='height:50rpx'></view>
    <image src='../../images/cry.png' style='width:150rpx;height:150rpx;'></image>
    <view style='height:50rpx'></view>
    <text style='font-size:25srpx'>未能搜索到内容</text>
  </view>

</view>