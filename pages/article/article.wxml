<view class="book-bg">
  <view style='weight:100%;text-align: center;margin-top:20rpx'>
    <image class="image_frame" src="{{zx_info.img}}" mode="aspectFill"></image>
  </view>

  <view style='display: flex;flex-direction: row; margin-bottom:20rpx'>
    <view class='' style='padding-left: 30rpx;float: left;width: 600rpx;position: relative;'>
      <view class='office-title-font' style='font-weight:bold;'>
        {{zx_info.title}}
      </view>
      <view style='height:20rpx;'></view>
      <view style='color:#AAA;'>
        {{zx_info.intro}}
      </view>
    </view>
    <view class='office-font-price' style='position: relative;float: right;height:60rpx'>
      {{zx_info.author}}
    </view>
  </view>

  <view style='width: 100%;height: 20rpx; background: #f5f5f5;'></view>

  <block wx:for="{{tw_steps}}">
    <view style='weight:100%;text-align: center; margin-top:30rpx'>
      <image class="image_frame" src="{{item.img}}" mode="aspectFill"></image>
    </view>
    <view style='padding:30rpx;color:#AAA'>
      {{item.text}}
    </view>
    <view style='width: 100%;height: 20rpx; background: #f5f5f5;'></view>
  </block>

</view>