<!--pages/article/article.wxml-->
<view class="book-bg">
  <image class="image_frame" src="{{zx_info.img}}" mode="aspectFill"></image>
  <view class="font-size-14 tw-title text-oneline tw-title-div" style="background-image: url('../../images/text_bmask.png');">
    <text wx:if="{{zx_info.flag == 1}}" class="margin-left-10" style="margin-right:50px;">推荐</text>
  </view>
  <view class="page">
    <view class="page__hd" style='padding: 0px 0px'>
      <view class="page__title text-oneline" style='text-align:center;'>{{zx_info.title}}</view>
    <view class="page__desc text-oneline" style='text-align:center;'>{{zx_info.author}}</view>
    </view>
    <view class="page__bd">
      <view class="weui-article">
        <!-- <view class="weui-article__h1">大标题</view> -->
        <view class="weui-article__section">
          <!-- <view class="weui-article__title">章标题</view> -->
        <block wx:for="{{tw_steps}}">
          <view class="weui-article__section">
            <view class="weui-article__h3">{{index+1}} 节标题</view>
            <view class="weui-article__p">
              {{item.text}}
            </view>
          </view>
         </block>
        </view>
      </view>
    </view>
  </view>
</view>