/* 选择企业 */
.weui-cells-copy {
  position: relative;
  margin-top: 1.17647059em;
  background-color: #fff;
  line-height: 1.41176471;
  font-size: 17px;
}

.down-online {
  width: 720rpx;
  height: 2rpx;
  background: lightgray;
  margin-left: 30rpx;
}

.weui-cells-copy:after {
  content: " ";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1rpx solid #d9d9d9;
  color: #d9d9d9;
}
