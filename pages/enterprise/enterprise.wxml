<view class='page'>
  <block wx:for="{{enterprise}}">
    <view class='margin-top-10 tw-div-shadow' style='weight:50%;' bindtap="jumpEnterpriseInfo" data-id="{{item.id}}">
      <view class='text-oneline enterprise-name-font padding-left-50 '>{{item.name}}</view>
      <view class='text-oneline enterprise-address-font padding-left-50'>{{item.address}}</view>
    </view>
  </block>
  <view class="page__bd page__bd_spacing" style='margin-top:30rpx;'>
    <button bindtap='addEnterprise' class="weui-btn" type="primary" plain="true">添加企业信息</button>
