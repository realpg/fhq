<!--pages/product/product.wxml-->
<view class="book-bg">
  <view style='weight:100%;text-align: center;margin-top:20rpx'>
    <image class="image_frame" src="{{good_info.img}}" mode="aspectFill"></image>
  </view>

  <view style='display: flex;flex-direction: row; margin-bottom:20rpx'>
    <view class='text-twoline' style='padding-left: 30rpx;float: left;width: 500rpx;position: relative;'>
      <view class='office-title-font' style='font-weight:bold;'>
        {{good_info.title}}
      </view>
      <view style='height:20rpx;'></view>
      <view style='color:#AAA'>
        {{good_info.desc}}
      </view>
    </view>
    <view class='office-font-price' style='margin-left:30rpx ;float: right;position: relative;margin-top:50rpx;'>
      {{good_info.show_price}}
    </view>
  </view>

  <view style='width: 100%;height: 20rpx; background: #f5f5f5;'></view>

  <block wx:for="{{tw_steps}}">
    <view style='weight:100%;text-align: center; margin-top:30rpx'>
      <image class="image_frame" src="{{item.img}}" mode="aspectFill"></image>
    </view>
    <view style='padding:30rpx;color:#AAA'>
      {{item.text}}
    </view>
    <view style='width: 100%;height: 20rpx; background: #f5f5f5;'></view>
  </block>

  <view style='height:100rpx'></view>

  <view class="white-bg weui-flex book-shara-box border-top">
    <view class="office-share1">
      剩余： {{good_info.count}}间
    </view>
    <view class='office-share2 text-center' catchtap="gotobuy">立即下单</view>
  </view>
</view>