/* pages/templates/BookInfoTpl/bookInfoTpl.wxss */

.bar {
  display: flex;
  flex-direction: row;
  padding: 10rpx 0rpx;
  border-bottom: 1px rgba(255, 255, 255, 0.2) solid;
}

.bar-img {
  float: left;
}

.bar-img-nor {
  width: 240rpx;
  height: 300rpx;
  border-radius: 10rpx;
}

.bar-info {
  padding-left: 40rpx;
  float: left;
  width: 460rpx;
  font-size: 24px;
}

.bar-title-font{
  /*font-family: .PingFang-SC-Regular;*/
  font-size: 32rpx;
  color: #646464;
  letter-spacing: -0.77rpx;
}

.bar-font{
  font-family: PingFangSC-Light;
  font-size: 30rpx;
  color: #969696;
  letter-spacing: -0.63rpx;
}

.index-bar-title-font{
  /*font-family: .PingFang-SC-Regular;*/
  font-size: 30rpx;
  color: #fff;
  letter-spacing: -0.77rpx;
}

.index-bar-font{
  font-family: PingFangSC-Light;
  font-size: 24rpx;
  color: #fff;
  letter-spacing: -0.63rpx;
}

.index-bar-img{
  height:280rpx;
  border-radius:3%;
}

.index-bar-text{
  background-image: linear-gradient(270deg, rgba(0,0,0,0.00) 0%, rgba(0,0,0,0.73) 100%);
  width:336rpx;
  margin-top:114rpx;
}

.index-bar-icon{
  display:inline;
}