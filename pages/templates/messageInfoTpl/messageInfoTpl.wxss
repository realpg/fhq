/* pages/templates/messageInfoTpl/messageInfoTpl.wxss */

.tw-title {
  position: absolute;
  top: 24px;
  left: 0px;
  color: #fff;
  max-width: 340px;
}

.tw-time {
  position: absolute;
  bottom: 5px;
  left: 0px;
  color: #fff;
  max-width: 340px;
}

.tw-title-div {
  display: inline-flex;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

/*私密设置*/

.tw-pri-div {
  position: absolute;
  top: 24px;
  right: 10px;
}

.pri-style {
  background-color: #939492;
  width: 46px;
  height: 24px;
  line-height: 24px;
  border-radius: 12px;
}

/*删除图标*/

.tw-del-div {
  position: absolute;
  bottom: 10px;
  right: 15px;
}

/*编辑图标*/

.tw-edit-div {
  position: absolute;
  bottom: 10px;
  right: 45px;
}

/*类型设置*/

.tw-type-div {
  position: absolute;
  bottom: 24px;
  right: 10px;
}

/*透明度设置*/

.opacity-7 {
  opacity: 0.7;
}

.opacity-8 {
  opacity: 0.8;
}

.tw-date {
  position: absolute;
  top: 44px;
  left: 0px;
  max-width: 340px;
}

.tw-div-shadow {
  box-shadow: 2px 2px 6px #e9f4ff;
}

.grey-shadow {
  box-shadow: 2px 2px 6px #333;
}

.tw-img{
  width: 100%;
  height: 360rpx;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.tw-img-u {
  width: 100%;
  height: 180px;
  border-radius: 5px;
}

.mask-div-black {
  background: rgba(0, 0, 0, 0);
  position: absolute;
  top: 0px;
  left: 0px;
}

.office-font{
  font-size: 24rpx;
  color: #AAA;
  line-height: 40rpx;
}

/* 下边框  */
.product-down-line {
  width: 720rpx;
  height: 2rpx;
  background: #e6e6e6;
  margin-left: 30rpx;
}